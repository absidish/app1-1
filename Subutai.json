{
  "name": "${environmentName}",
  "description": "test",
  "version": "1.0.0",
  "author": "https://github.com/absidish",
  "containers": [
    {
      "hostname": "${db}",
      "template": "debian-stretch",
      "peer-criteria": "gr1",
      "size": "${dbtype}"
    },
    {
      "hostname": "${web}",
      "template": "debian-stretch",
      "peer-criteria": "gr1",
      "size": "${webtype}",
      "peer-layout": "d1"
    }
  ],
  "peer-layouts": [
    {
      "name": "d1",
      "peer-count": "1",
      "container-per-peer": "1"
    }
  ],
  "peer-criteria": [
    {
      "name": "gr1"
    }
  ],
  "ansible-configuration": {
    "source-url": "https://github.com/absidish/app1-1/archive/master.zip",
    "ansible-playbook": "site.yml",
    "extra-vars": [
    ],
    "groups": [
      {
        "name": "monitoring_servers",
        "hostnames": [
          "${db}"
        ]
      },
      {
        "name": "web_servers",
        "hostnames": [
          "${web}"
        ]
      }
    ]
  },
  "user-variables": {
    "environmentName": {
      "description": "Enter the environment name",
      "type": "string",
      "default": "wp",
      "validation": "[a-zA-Z0-9]+"
    },
    "db": {
      "description": "Enter the db name",
      "type": "string",
      "default": "wp",
      "validation": "[a-zA-Z0-9]+"
    },
       "web": {
      "description": "Enter the web name",
      "type": "string",
      "default": "wp",
      "validation": "[a-zA-Z0-9]+"
    },
    "peerCount": {
      "description": "peer count",
      "type": "int",
      "default": "3",
      "validation": "\\d+"
    },
    "dbtype": {
      "description": "You can set TINY,SMALL,MEDIUM,LARGE,HUGE",
      "type": "enum",
      "default": "SMALL",
      "validation": "TINY,SMALL,MEDIUM,LARGE,HUGE"
    },
    "webtype": {
      "description": "You can set TINY,SMALL,MEDIUM,LARGE,HUGE",
      "type": "enum",
      "default": "SMALL",
      "validation": "TINY,SMALL,MEDIUM,LARGE,HUGE"
    }
  }
}
