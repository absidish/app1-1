{
    "name": "${environmentName}",
    "description": "TICK",
    "version": "6.x",
    "author": "https://github.com/happyaron",
    "containers": [
        {
            "hostname": "${webContainerName}",
            "template": "debian-stretch",
            "peer-criteria": "HTTP-GROUP",
            "size": "${containerSize}",
            "port-mapping": [
                {
                    "protocol": "http",
                    "domain": "${domainName1}",
                    "internal-port": "3000",
                    "external-port": "80"
                },
                {
                    "protocol": "tcp",
                    "domain": "${domainName2}",
                    "internal-port": "1883",
                    "external-port": "1883"
                },
                {
                    "protocol": "http",
                    "domain": "${domainName3}",
                    "internal-port": "8087",
                    "external-port": "8087"
                }
            ]
        },
         {
            "hostname": "${webContainerName1}",
            "template": "debian-stretch",
            "peer-criteria": "HTTP-GROUP1",
            "size": "${containerSize}",
            "port-mapping": [
                {
                    "protocol": "http",
                    "domain": "${domainName11}",
                    "internal-port": "3000",
                    "external-port": "80"
                },
                {
                    "protocol": "tcp",
                    "domain": "${domainName22}",
                    "internal-port": "1883",
                    "external-port": "1883"
                },
                {
                    "protocol": "http",
                    "domain": "${domainName33}",
                    "internal-port": "8087",
                    "external-port": "8087"
                }
            ]
        }
    ],
    "peer-criteria": [
        {
            "name": "HTTP-GROUP"
        },
         {
            "name": "HTTP-GROUP1"
        }
    ],
    "ansible-configuration": {
        "source-url": "https://github.com/happyaron/tick-blueprint/archive/master.zip",
        "ansible-playbook": "site.yml",
        "extra-vars": [
            { "key": "domain_name", "value": "${domainName1}" },
            { "key": "influxusername", "value": "${influxusername}" },
            { "key": "influxpassword", "value": "${influxpassword}" },
            { "key": "mqttusername", "value": "${mqttusername}" },
            { "key": "mqttpassword", "value": "${mqttpassword}" }
        ],
        "groups": [
            {
                "name": "tick",
                "hostnames": [
                    "${webContainerName}"
                ]
            }
        ]
    },
    "user-variables": {
        "influxusername": {
            "description": "Enter the InfluxDB user name",
            "type": "string",
            "default": "subutai",
            "validation": "[a-zA-Z0-9]+"
        },
        "influxpassword": {
            "description": "Enter the InfluxDB user password",
            "type": "string",
            "default": "subutai",
            "validation": "[a-zA-Z0-9]+"
        },
        "mqttusername": {
            "description": "Enter the MQTT user name",
            "type": "string",
            "default": "subutai",
            "validation": "[a-zA-Z0-9]+"
        },
        "mqttpassword": {
            "description": "Enter the MQTT user password",
            "type": "string",
            "default": "subutai",
            "validation": "[a-zA-Z0-9]+"
        },
        "environmentName": {
            "description": "Enter the environment name",
            "type": "string",
            "default": "tick",
            "validation": "[a-zA-Z0-9]+"
        },
          "domainName11": {
            "description": "Enter the domain name for Grafana dashboard",
            "type": "domain",
            "default": "change.the.domain",
            "validation": "[a-zA-Z0-9]+"
        },
        "domainName22": {
            "description": "Enter the domain name for MQTT",
            "type": "domain",
            "default": "change.the.domain",
            "validation": "[a-zA-Z0-9]+"
        },
        "domainName33": {
            "description": "Enter the domain name for InfluxDB",
            "type": "domain",
            "default": "change.the.domain",
            "validation": "[a-zA-Z0-9]+"
        },
        
        "domainName1": {
            "description": "Enter the domain name for Grafana dashboard",
            "type": "domain",
            "default": "change.the.domain",
            "validation": "[a-zA-Z0-9]+"
        },
        "domainName2": {
            "description": "Enter the domain name for MQTT",
            "type": "domain",
            "default": "change.the.domain",
            "validation": "[a-zA-Z0-9]+"
        },
        "domainName3": {
            "description": "Enter the domain name for InfluxDB",
            "type": "domain",
            "default": "change.the.domain",
            "validation": "[a-zA-Z0-9]+"
        },
        "webContainerName": {
            "description": "Enter the container's hostname",
            "type": "string",
            "default": "tick",
            "validation": "[a-zA-Z0-9]+"
        },
        "webContainerName1": {
            "description": "Enter the container's hostname",
            "type": "string",
            "default": "tick",
            "validation": "[a-zA-Z0-9]+"
        },
        "containerSize": {
            "description": "Container Size",
            "type": "enum",
            "default": "LARGE",
            "validation": "TINY,SMALL,MEDIUM,LARGE,HUGE"
        }
    }
}
